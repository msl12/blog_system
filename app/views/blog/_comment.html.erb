<li class="clearfix" id="<%= comment.id %>">
  <div class="user_img"><%= commenter_logo(comment.account) %></div>
  <div class="cot_con">
    <div class="info">
      <span class="user_name"><%= commenter_link(comment.account) %></span>
      <span class="time"><%= time_ago_in_words(comment.created_at) %>前</span>
      <% if account_admin? %>
        <span><%= link_to '', delete_comment_path(comment), :method => :delete, :remote => true, :class => 'delete', data: {confirm: '要删除评论吗？'}, :title => '删除评论' %></span>
      <% end %>
    </div>
    <div class="comment_content"><%= comment.md_content.html_safe %></div>
  </div>
</li>