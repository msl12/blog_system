<% @nav = 'tag' %>
<% @title = '文章分类' %>

<div class="left">
  <h3 class="tab_list">文章分类</h3>
  <div class="con">
    <div class="tag_list">
      <ul class="clearfix">
        <% Blog.cached_tag_cloud.each do |tag| %>
        <li>
          <%= link_to "<span>#{tag.name}</span>".html_safe, tag_path(tag.name), :class => 'tag' %>
          X <span><%= tag.count %></span>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div><!-- left content -->

<div class="right">
  <%= render partial: 'right' %>
</div><!-- right content -->