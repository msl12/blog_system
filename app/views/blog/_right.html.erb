<%# cache("#{CACHE_PREFIX}/layout/right", :expires_in => 1.day) do %>
<h3>我的微信号</h3>
<div class="tag">
	<%= image_tag("weixin.png", :alt => "微信号", :title => "微信号") %>
</div>
<h3>文章分类</h3>
<div class="tag">
  <% Blog.cached_tag_cloud.each do |tag| %>
  	<%= link_to "#{tag.name}<span>#{tag.count}</span>".html_safe, tag_path(tag.name) %><!-- url(:blog, :tag, :name => tag.name) -->
  <% end %>
</div>
<h3>热门文章</h3>
<div class="hot_blog">
	<% Blog.hot_blogs(5).each do |blog| %>
		<%= link_to blog.title, blog_path(blog) %>
	<% end %>
</div>
<h3>最新评论</h3>
<ul class="comment">
	<% BlogComment.order('id DESC').limit(5).each do |comment| %>
		<li>
			<div><%= brief_content(comment.content) %></div>
			<%= comment.account.name %>评论了<%= link_to comment.blog.title, "/blog/#{comment.blog.id}/#comments" %>
		</li>
	<% end %>
</ul>